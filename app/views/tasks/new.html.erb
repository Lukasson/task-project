<h1>New Task</h1>

<%= form_for @task do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.hidden_field :done, :value => "false" %>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </p>

  <%= f.submit %>

<% end %>